@font-face {
  font-family: 'fontello';
  src: url('../fonts/fontello.eot');
  src: url('../fonts/fontello.eot#iefix') format('embedded-opentype'),
          url('../fonts/fontello.woff2') format('woff2'),
          url('../fonts/fontello.woff') format('woff'),
          url('../fonts/fontello.ttf') format('truetype'),
          url('../fonts/fontello.svg#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}

.icon
  color: inherit
  text-align: center
  vertical-align: middle
  &__help-circled:before { content: '\e800'; } /* '' */
  &__left-open:before { content: '\e801'; } /* '' */
  &__cancel:before { content: '\e802'; } /* '' */
  &__down-dir:before { content: '\e803'; } /* '' */
  &__angle-down:before { content: '\f107'; } /* '' */

.icon:before
  font-family: "fontello"
  font-style: normal
  font-weight: normal
  speak: none
  display: inline-block
  text-decoration: inherit
  width: 1em
  text-align: center
  color: inherit