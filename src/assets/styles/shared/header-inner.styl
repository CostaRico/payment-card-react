.header-inner
  height: 60px
  background: $primary-color
  color: #333333
  display: flex
  justify-content: space-between
  flex-direction: row

  &__back
    height: 60px
    width: 60px
    font-size: 24px
    position: relative
    cursor: pointer

    .icon
      color: #333333
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__close
    height: 60px
    width: 60px
    font-size: 24px
    position: relative
    cursor: pointer

    .icon
      color: #333333
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__title
    text-transform: uppercase
    font-size: 24px
    padding: 15px 0
