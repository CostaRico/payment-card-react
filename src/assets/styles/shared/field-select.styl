.field-select
  height: 40px
  min-width: 100px;
  background: #201F21
  border: none
  outline: none
  width: 100%
  border-radius: 3px
  position: relative
  box-shadow: 1px 1px 1px rgba(255, 255, 255, 0.2), inset 1px 1px 1px rgba(0, 0, 0, 0.5)

  &__btn
    height: 38px
    width: 38px
    position: absolute
    right: 1px
    top: 1px
    background: #343336
    box-shadow: inset 1px 1px 1px rgba(255, 255, 255, 0.1), inset -1px -1px 1px rgba(0, 0, 0, 0.2)

  &__btn:after
    content: ''
    width: 0
    height: 0
    border-style: solid
    border-width: 6px 6px 0 6px
    border-color: #A0A0A0 transparent transparent transparent
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-5px, -2px)

  select
    width: 100%
    height: 100%
    padding: 10px 40px 10px 10px
    border: none
    outline: none
    color: #A0A0A0
    background: transparent
    -webkit-appearance: none;
    position: absolute
    top: 0
    left: 0
    z-index 10
